   "source": [
    "def getParity( n ): \n",
    "    parity = 0\n",
    "    while n: \n",
    "        parity = ~parity \n",
    "        n = n & (n - 1) \n",
    "    return parity \n",
    "  \n",
    "\n",
    "n = 6\n",
    "print (\"Parity of no \", n,\" = \", \n",
    "     ( \"odd\" if getParity(n) else \"even\")) "
   ]
